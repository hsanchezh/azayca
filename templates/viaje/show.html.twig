{% extends 'layout.html.twig' %}

{% block title %}Viaje{% endblock %}

{% block body %}
    <h1>Viaje</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ viaje.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ viaje.fecha ? viaje.fecha|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Es_ida_vuelta</th>
                <td>{{ viaje.esIdaVuelta ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Valoracion</th>
                <td>{{ viaje.valoracion }}</td>
            </tr>
            <tr>
                <th>Comentarios</th>
                <td>{{ viaje.comentarios }}</td>
            </tr>
            <tr>
                <th>Num_kilometros</th>
                <td>{{ viaje.numKilometros }}</td>
            </tr>
            <tr>
                <th>Importe_distancia</th>
                <td>{{ viaje.importeDistancia }}</td>
            </tr>
            <tr>
                <th>Horas_espera</th>
                <td>{{ viaje.horasEspera }}</td>
            </tr>
            <tr>
                <th>Importe_espera</th>
                <td>{{ viaje.importeEspera }}</td>
            </tr>
            <tr>
                <th>Importe_total</th>
                <td>{{ viaje.importeTotal }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_viaje_index') }}">back to list</a>

    <a href="{{ path('app_viaje_edit', {'id': viaje.id}) }}">edit</a>

    {{ include('viaje/_delete_form.html.twig') }}
{% endblock %}

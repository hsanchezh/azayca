{% extends 'layout.html.twig' %}

{% block title %}{{ navega_detalle_tarifa_km }}{% endblock %}

{% block cabecera %}
    <h3 class="{{ estilo_cabecera_pagina }}">{{ navega_detalle_tarifa_km }}</h3>
{% endblock %}

{% block contenido %}
    <table class="{{ estilo_tabla }}">
        <tbody>
            <tr>
                <th>{{ etiqueta_inicio_vigencia }}</th>
                <td>{{ tarifa_km.inicioVigencia ? tarifa_km.inicioVigencia|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>{{ etiqueta_fin_vigencia }}</th>
                <td>{{ tarifa_km.finVigencia ? tarifa_km.finVigencia|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>{{ etiqueta_precio_km }}</th>
                <td>{{ tarifa_km.precioKm }}</td>
            </tr>
        </tbody>
    </table>

    <h5>{{ navega_viajes_con_esta_tarifa }}</h5>
    <div class="{{ estilo_subcontenido }}">
        {{ include('viaje/_tabla_viajes.html.twig') }}
    </div>
{% endblock %}

{% block acciones %}
    <a href="{{ path('app_tarifa_km_index') }}" class="{{ estilo_boton_volver }}">{{ navega_ver_historico_tarifas_km }}</a>

    <a href="{{ path('app_tarifa_km_edit', {'id': tarifa_km.id}) }}" class="{{ estilo_boton_editar }}">{{ editar }}</a>

    <a href="{{ path('app_tarifa_espera_new') }}" class="{{ estilo_boton_nuevo_elemento }}">{{ navega_nueva_tarifa_km }}</a>

    {# No se contempla la opci√≥n de eliminar tarifas
        {% if not viajes %}
            {{ include('tarifa_km/_delete_form.html.twig') }}
        {% endif %}
    #}
{% endblock %}

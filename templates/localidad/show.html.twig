{% extends 'layout.html.twig' %}

{% block title %}{{ navega_detalle_localidad }}{% endblock %}

{% block cabecera %}
    <h3 class="{{ estilo_cabecera_pagina }}">{{ navega_detalle_localidad }}</h3>
{% endblock %}

{% block contenido %}
    <table class="{{ estilo_tabla }}">
        <tbody>
            <tr>
                <th>{{ etiqueta_nombre_localidad }}</th>
                <td>{{ localidad.nombre }}</td>
            </tr>
            <tr>
                <th>{{ etiqueta_total_viajes }}</th>
                <td>{{ localidad.totalViajes }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}

{% block acciones %}
    <a href="{{ path('app_localidad_index') }}" class="{{ estilo_boton_volver }}">{{ volver_al_listado }}</a>

    <a href="{{ path('app_localidad_edit', {'id': localidad.id}) }}" class="{{ estilo_boton_editar }}">{{ editar }}</a>

    {{ include('localidad/_delete_form.html.twig') }}
{% endblock %}

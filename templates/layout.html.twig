{% extends 'base.html.twig' %}

{% block title %}Est√°s dentro {{ app.user.login }}{% endblock %}
{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
{% endblock %}

{% block javascripts %}
    {% block importmap %}{{ importmap('app') }}{% endblock %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
{% endblock %}

{% block menu %}
    {% if app.user %}
        <nav class="navbar navbar-expand-xl bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><img width="150px" src="{{ asset('img/logo.png') }}" alt="Logotipo de Azayca"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse menu-azayca" id="collapsibleNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a href="{{ path('app_main_menu') }}" class="nav-link">{{ navega_inicio }}</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Conductores</a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-item"><a href="{{ path('app_conductor_index') }}" class="nav-link">{{ navega_ver_conductores }}</a></li>
                                <li class="dropdown-item"><a href="{{ path('app_conductor_new') }}" class="nav-link">{{ navega_nuevo_conductor }}</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Localidades</a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-item"><a href="{{ path('app_localidad_index') }}" class="nav-link">{{ navega_ver_localidades }}</a></li>
                                <li class="dropdown-item"><a href="{{ path('app_localidad_new') }}" class="nav-link">{{ navega_nueva_localidad }}</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Pacientes</a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-item"><a href="{{ path('app_paciente_index') }}" class="nav-link">{{ navega_ver_pacientes }}</a></li>
                                <li class="dropdown-item"><a href="{{ path('app_paciente_new') }}" class="nav-link">{{ navega_nuevo_paciente }}</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Tarifas</a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-item"><a href="{{ path('app_tarifa_espera_index') }}" class="nav-link">{{ navega_ver_tarifa_espera }}</a></li>
                                <li class="dropdown-item"><a href="{{ path('app_tarifa_km_index') }}" class="nav-link">{{ navega_ver_tarifa_km }}</a></li>
                            </ul>
                        </li>


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Viajes</a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-item"><a href="{{ path('app_viaje_index') }}" class="nav-link">{{ navega_ver_viajes }}</a></li>
                                <li class="dropdown-item"><a href="{{ path('app_viaje_new') }}" class="nav-link">{{ navega_nuevo_viaje }}</a></li>
                            </ul>
                        </li>

                        {% if app.user.esAdmin %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Usuarios</a>
                                <ul class="dropdown-menu">
                                    <li class="dropdown-item"><a href="{{ path('app_usuario_index') }}" class="nav-link">{{ navega_ver_usuarios }}</a></li>
                                    <li class="dropdown-item"><a href="{{ path('app_usuario_new') }}" class="nav-link">{{ navega_nuevo_usuario }}</a></li>
                                </ul>
                            </li>

                        {% endif %}
                        <li class="nav-item"><a href="{{ path('app_logout') }}" class="nav-link">Desconectar</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    {% endif %}
{% endblock %}


{% block body %}
    <div>
        {% block cabecera %}{% endblock %}
    </div>
    <div class="container">
        {% block contenido %}{% endblock %}
    </div>
    <div class="container">
        {% block acciones %}{% endblock %}
    </div>
{% endblock %}

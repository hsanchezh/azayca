{% extends 'layout.html.twig' %}

{% block title %}{{ navega_listado_usuarios }}{% endblock %}

{% block cabecera %}
    <h3 class="{{ estilo_cabecera_pagina }}">{{ navega_listado_usuarios }}</h3>
{% endblock %}

{% block contenido %}
    <table class="{{ estilo_tabla }}">
        <thead>
            <tr>
                <th>{{ etiqueta_login }}</th>
                <th>{{ etiqueta_email }}</th>
                <th>{{ etiqueta_es_admin }}</th>
                <th>{{ etiqueta_acciones }}</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td>{{ usuario.login }}</td>
                <td>{{ usuario.email }}</td>
                <td>{{ usuario.esAdmin ? booleano_si : booleano_no }}</td>
                <td>
                    <a href="{{ path('app_usuario_show', {'id': usuario.id}) }}" class="{{ estilo_boton_detalle_incrustado }}">{{ ver_detalle }}</a>
                    <a href="{{ path('app_usuario_edit', {'id': usuario.id}) }}" class="{{ estilo_boton_editar_incrustado }}">{{ editar }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ sin_resultados }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block acciones %}
    <a href="{{ path('app_usuario_new') }}" class="{{ estilo_boton_nuevo_elemento }}">{{ navega_nuevo_usuario }}</a>
{% endblock %}
